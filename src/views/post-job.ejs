
<header id="post-job-header">
    <div id="post-job">
        <% if(jobNumber) { %>
            <p>Update a Job</p>
        <% } else { %>
            <p>Post a new Job</p>
        <% } %>
        <div id="post-job-form">
            <form action="/post-job" method="post">
                <label for="job-category"></label>
                <select id="job-category" name="jobCategory">
                    <option value="" disabled selected>Select job category</option>
                    <option value="Tech">Tech</option>
                    <option value="Non-tech">Non Tech</option>
                </select>
                <br>
                <label for="job-designation"></label>
                <select id="job-designation" name="jobDesignation">
                    <option value="" disabled selected>Select job designation</option>
                    <option value="HR">HR</option>
                    <option value="SDE">SDE</option>
                    <option value="DevOps">DevOps</option>
                    <option value="MERN Developer">MERN Developer</option>
                    <option value="MEAN Developer">MEAN Developer</option>
                    <option value="JAVA Developer">JAVA Developer</option>
                    <option value="FE Developer">Front-End Developer</option>
                    <option value="BE Developer">Back-End Developer</option>
                    <option value="FS Developer">Full-Stack Developer</option>
                </select>
                <br>
                <label class="post-job-label" for="company">Company Name</label>
                <input id="company" name="companyName" type="text"  required autocomplete="off" style="width: 25.85em;">
                <br>
                <label class="post-job-label" for="post-job-location">Job Location</label>
                <input id="post-job-location" name="jobLocation" type="text" required autocomplete="off" style="width: 27.43em;">
                <br>
                <label for="post-job-salary"></label>
                <input id="post-job-salary" name="salary" type="text" placeholder="Enter Salary" required autocomplete="off">
                <label id="total-positions-label" for="total-positions">Total Positions</label>
                <input id="total-positions" type="number" name="numberOfOpenings" required autocomplete="off" placeholder="Total No. Of Openings" style="width: 13.31em;">
                <br>
                <div style="position: relative;">
                <label for="post-job-skills"></label>
                <select id="post-job-skills" name="skillsRequired" multiple size="9" style="width: 16em; height: 100px;">
                    <option value="" disabled selected>Select skills required for this job</option>
                    <option value="React">React</option>
                    <option value="NodeJs">NodeJs</option>
                    <option value="Angular">Angular</option>
                    <option value="MongoDB">MongoDB</option>
                    <option value="SQL">SQL</option>
                    <option value="Express">Express</option>
                    <option value="Java">Java</option>
                    <option value="SpringBoot">SpringBoot</option>
                    <option value="C++">C++</option>
                    <option value="DSA">DSA</option>
                </select>
                    <label id="applied-date-label" for="job-applied-date">Apply By</label>
                    <input id="job-applied-date" name="appliedDate" type="date" required  style="width: 13.3em;">
                </div>
                <!-- <br> -->
                <% if(jobNumber) { %>
                    <a href="#" onclick="updateJob('<%= jobNumber%>')">Update Job</a>
                <% } else { %>
                    <button type="submit" onclick="newJobPosted()">Submit</button>
                <% } %>
            </form>
        </div>
    </div>
</header>












